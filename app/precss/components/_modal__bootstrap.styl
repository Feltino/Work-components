#overlay
  display: none
  position: absolute
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.6)
  left: 0
  top: 0
  cursor: pointer

#loader
  position: absolute
  width: 50px
  height: 50px
  left: 50%
  margin-left: -25px
  top: 50%
  margin-top: -25px

#thx
  background: #fff
  position: absolute
  left: 50%
  margin-left: -170px
  top: 50%
  padding: 30px
  margin-top: -20px

.modal
  &__come
    letter-spacing 0.03em
    line-height 1.6em
    font-size 15px
    height 65px
    background #fff
    border 1px solid #fff
    border-radius 3px
    padding-left 34px
    margin 0 auto 8px auto

  &__guard
    text-align center
    text-transform uppercase
    font-size 11px
    letter-spacing 0.03em
    line-height 1.6em
    color #000
    margin-top 20px
    margin-bottom 25px

  &__button
    margin: 0 auto
    height: 70px
    color: #fff
    text-transform: uppercase;
    font-size: 13px
    letter-spacing 0.03em
    line-height 1.6em
    border-radius 2px
